# Shell environment file - source this or use direnv
# This ensures DATABASE_URL is always set in your shell

if [ -f .env.local ]; then
    export $(grep -E '^DATABASE_URL=' .env.local | xargs)
    echo "âœ“ DATABASE_URL loaded from .env.local"
    echo "  Database: $(echo $DATABASE_URL | sed 's/.*\///' | sed 's/?.*//')"
fi
