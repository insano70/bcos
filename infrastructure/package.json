{
  "name": "bcos-infrastructure",
  "version": "1.0.0",
  "private": true,
  "description": "BCOS AWS CDK Infrastructure as Code",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "cdk": "cdk",
    "deploy:security": "cdk deploy SecurityStack",
    "deploy:network": "cdk deploy NetworkStack", 
    "deploy:staging": "cdk deploy StagingStage",
    "deploy:production": "cdk deploy ProductionStage",
    "deploy:all": "cdk deploy --all",
    "diff": "cdk diff",
    "synth": "cdk synth",
    "destroy:staging": "cdk destroy StagingStage",
    "destroy:production": "cdk destroy ProductionStage",
    "bootstrap": "cdk bootstrap",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "upgrade": "npm update && npm audit fix"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "aws-cdk": "^2.174.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.174.2",
    "constructs": "^10.4.2"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
