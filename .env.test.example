# Test environment configuration
# Copy this file to .env.test and fill in the values
NODE_ENV=test

# Database - local test database
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Analytics database (optional for most tests)
# ANALYTICS_DATABASE_URL=postgresql://username:password@localhost:5432/analytics_db

# JWT secrets - generate with: openssl rand -base64 48
JWT_SECRET=your-jwt-secret-here-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-here-min-32-chars

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:4001

# Optional test values
NEXT_PUBLIC_EXPERIMENTAL_MODE=false

# CSRF secret - generate with: openssl rand -hex 32
CSRF_SECRET=your-csrf-secret-here-64-hex-chars

# MFA temp token secret - generate with: openssl rand -hex 32
MFA_TEMP_TOKEN_SECRET=your-mfa-secret-here-64-hex-chars
