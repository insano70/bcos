# Phase 2 Universal Logger Migration Feature Flags
# Copy sections to .env.local as needed for Phase 2 migration control

# =========================================
# Phase 2: High-Traffic API Routes Migration
# =========================================

# Authentication Routes Enhancement (Priority 1)
PHASE2_ENABLE_ENHANCED_LOGIN_LOGGING=false
PHASE2_ENABLE_ENHANCED_LOGOUT_LOGGING=false
PHASE2_ENABLE_ENHANCED_REFRESH_LOGGING=false
PHASE2_ENABLE_ENHANCED_SESSION_LOGGING=false
PHASE2_ENABLE_ENHANCED_CSRF_LOGGING=false
PHASE2_ENABLE_ENHANCED_ME_ENDPOINT_LOGGING=false

# API Services Enhancement (Priority 2)
PHASE2_ENABLE_ENHANCED_AUDIT_SERVICE_LOGGING=false
PHASE2_ENABLE_ENHANCED_EMAIL_SERVICE_LOGGING=false
PHASE2_ENABLE_ENHANCED_SESSION_SERVICE_LOGGING=false
PHASE2_ENABLE_ENHANCED_UPLOAD_SERVICE_LOGGING=false

# API Middleware Enhancement (Priority 3)
PHASE2_ENABLE_ENHANCED_AUTH_MIDDLEWARE=false
PHASE2_ENABLE_ENHANCED_JWT_MIDDLEWARE=false
PHASE2_ENABLE_ENHANCED_RATE_LIMIT_MIDDLEWARE=false
PHASE2_ENABLE_ENHANCED_VALIDATION_MIDDLEWARE=false
PHASE2_ENABLE_ENHANCED_CSRF_MIDDLEWARE=false

# High-Traffic Endpoints Enhancement (Priority 4)
PHASE2_ENABLE_ENHANCED_USER_APIS=false
PHASE2_ENABLE_ENHANCED_PRACTICE_APIS=false
PHASE2_ENABLE_ENHANCED_UPLOAD_APIS=false
PHASE2_ENABLE_ENHANCED_SEARCH_APIS=false
PHASE2_ENABLE_ENHANCED_ANALYTICS_APIS=false

# RBAC and Security Enhancement (Critical)
PHASE2_ENABLE_ENHANCED_RBAC_ROUTE_HANDLER=false
PHASE2_ENABLE_ENHANCED_SECURITY_MIDDLEWARE=false

# Business Intelligence Features
PHASE2_ENABLE_BUSINESS_INTELLIGENCE_LOGGING=false
PHASE2_ENABLE_USER_BEHAVIOR_ANALYTICS=false
PHASE2_ENABLE_PERFORMANCE_ANALYTICS=false
PHASE2_ENABLE_COMPLIANCE_ANALYTICS=false

# Monitoring and Safety (Recommended: true)
PHASE2_ENABLE_PHASE2_PERFORMANCE_MONITORING=true
PHASE2_ENABLE_PHASE2_SECURITY_AUDIT=true
PHASE2_ENABLE_PHASE2_ROLLBACK_ON_ERROR=true

# =========================================
# Development Environment Shortcuts
# =========================================

# Enable all authentication routes at once (development only)
PHASE2_DEV_ENABLE_AUTH=false

# Enable all API services at once (development only)
PHASE2_DEV_ENABLE_SERVICES=false

# Enable all Phase 2 features at once (development only)
PHASE2_DEV_ENABLE_ALL=false

