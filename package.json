{
  "name": "bendcare-os",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p ${PORT:-4001}",
    "dev:turbo": "next dev --turbo -p ${PORT:-4001}",
    "dev:warm": "next dev -p ${PORT:-4001} & sleep 5 && node scripts/warmup-dev.js",
    "build": "tsx scripts/validate-env.ts && next build",
    "start": "next start -p ${PORT:-4001}",
    "lint": "pnpm lint:biome && pnpm lint:logger",
    "lint:biome": "biome lint .",
    "lint:logger": "tsx scripts/lint-no-server-logger-in-client.ts",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/unit --reporter=verbose",
    "test:integration": "vitest run tests/integration --reporter=verbose",
    "test:api": "vitest run tests/integration/api --reporter=verbose",
    "test:rbac": "vitest run tests/integration/rbac --reporter=verbose",
    "test:e2e": "vitest run tests/e2e --reporter=verbose",
    "test:parallel": "vitest run --pool=forks --poolOptions.forks.singleFork=false --reporter=verbose",
    "test:parallel:max": "vitest run --pool=forks --poolOptions.forks.singleFork=false --maxConcurrency=8 --reporter=verbose",
    "test:sequential": "vitest run --pool=forks --poolOptions.forks.singleFork=true --reporter=verbose",
    "test:coverage": "vitest run --coverage --reporter=verbose",
    "test:coverage:ui": "vitest run --coverage --ui",
    "test:watch": "vitest watch",
    "test:watch:ui": "vitest watch --ui",
    "test:specific:users": "vitest run tests/integration/api/users.test.ts --reporter=verbose",
    "test:specific:permissions": "vitest run tests/integration/rbac/permissions.test.ts --reporter=verbose",
    "test:saml": "vitest run tests/unit/saml tests/integration/saml tests/integration/api/auth/saml-login.test.ts tests/integration/security/saml-security.test.ts --reporter=verbose",
    "test:saml:unit": "vitest run tests/unit/saml --reporter=verbose",
    "test:saml:integration": "vitest run tests/integration/saml tests/integration/api/auth/saml-login.test.ts tests/integration/security/saml-security.test.ts --reporter=verbose",
    "test:debug": "vitest run --reporter=verbose --no-coverage",
    "test:debug:single": "vitest run --pool=forks --poolOptions.forks.singleFork=true --reporter=verbose --no-coverage",
    "db:seed": "tsx --env-file=.env.local lib/db/seed.ts",
    "db:migrate": "tsx scripts/run-migrations.ts",
    "db:migrate:seed": "tsx --env-file=.env.local scripts/seed-drizzle-migrations.ts",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:validate": "tsx scripts/validate-migrations.ts",
    "db:psql": "./lib/db/db-utils.sh",
    "db:check": "./lib/db/db-utils.sh -c 'SELECT current_database();'",
    "db:backfill:account-security": "tsx --env-file=.env.local scripts/backfill-account-security.ts",
    "report-card:generate": "tsx --env-file=.env.local scripts/generate-report-card-stats.ts"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.948.0",
    "@aws-sdk/client-cloudwatch-logs": "^3.948.0",
    "@aws-sdk/client-s3": "^3.948.0",
    "@aws-sdk/s3-request-presigner": "^3.948.0",
    "@headlessui/react": "^2.2.9",
    "@hookform/resolvers": "^5.2.2",
    "@lexical/link": "^0.38.2",
    "@lexical/list": "^0.38.2",
    "@lexical/react": "^0.38.2",
    "@lexical/rich-text": "^0.38.2",
    "@lexical/utils": "^0.38.2",
    "@radix-ui/react-popover": "^1.1.15",
    "@simplewebauthn/browser": "^13.2.2",
    "@simplewebauthn/server": "^13.2.2",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^24.10.2",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "bcrypt": "^6.0.0",
    "chart.js": "^4.5.1",
    "chartjs-adapter-moment": "^1.0.1",
    "chartjs-plugin-zoom": "^2.2.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "3.3.1",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "exceljs": "^4.4.0",
    "framer-motion": "^12.23.26",
    "ioredis": "^5.8.2",
    "iron-session": "^8.0.4",
    "isomorphic-dompurify": "^2.34.0",
    "jose": "^6.1.3",
    "jspdf": "^3.0.4",
    "lexical": "^0.38.2",
    "lucide-react": "^0.556.0",
    "marked": "^17.0.1",
    "moment": "^2.30.1",
    "nanoid": "^5.1.6",
    "next": "15.5.7",
    "next-themes": "^0.4.6",
    "node-sql-parser": "^5.3.13",
    "nodemailer": "^7.0.11",
    "openid-client": "^6.8.1",
    "p-limit": "^7.2.0",
    "postgres": "^3.4.7",
    "react": "19.2.1",
    "react-day-picker": "^9.12.0",
    "react-dom": "19.2.1",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.68.0",
    "sharp": "^0.34.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^27.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "esbuild": ">=0.25.0",
      "valibot": ">=1.2.0"
    }
  }
}
